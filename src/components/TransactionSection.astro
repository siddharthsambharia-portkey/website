---
import { Image } from 'astro:assets';
import IconWithBackground from './IconWithBackground';

interface Props {
	useCaseText: string;
	scenarioText: string;
	detailsText: string;
	imgMetadata: ImageMetadata;
	leftAlignedImg?: boolean;
	rightAlignedImg?: boolean;
}

const {
	useCaseText,
	scenarioText,
	detailsText,
	imgMetadata,
	leftAlignedImg,
	rightAlignedImg,
} = Astro.props;
---

<section
	class='flex flex-col-reverse md:flex-col-reverse lg:flex-row w-full items-center justify-center mt-[120px] mobile:mt-[180px] justify-between'
>
	{
		leftAlignedImg && (
			<div class='w-[370px]'>
				<Image
					src={imgMetadata}
					width={370}
					height={220}
					alt='green database'
					class='hidden lg:block'
				/>
			</div>
		)
	}
	<div class='flex flex-col w-full lg:w-1/2'>
		<div
			class='text-lighterGrey2 font-secondary sm:text-[8px] md:text-[12px] lg:text-[14px] mb-3 text-center lg:text-left'
		>
			Use Cases
		</div>
		<div
			class='text-white font-bold tracking-[0.47px] text-[28px] lg:text-[32px] mb-6 text-center lg:text-left'
		>
			{useCaseText}
		</div>

		<div class='w-[370px] mx-auto'>
			<Image
				src={imgMetadata}
				width={370}
				height={220}
				alt='green database'
				class='block lg:hidden'
			/>
		</div>

		<div class='flex flex-row'>
			<IconWithBackground iconPath='/public/clipboard-white.svg' />
			<div
				class='text-white font-bold tracking-[0.47px] text-[20px] mb-3'
			>
				Scenario:
			</div>
		</div>

		<p class='text-lightGrey font-normal font-secondary text-sm mb-6'>
			{scenarioText}
		</p>

		<div class='flex flex-row'>
			<IconWithBackground iconPath='/public/task-list-white.svg' />
			<div
				class='text-white font-bold tracking-[0.47px] text-[20px] mb-3 leading-6'
			>
				Details:
			</div>
		</div>
		<p class='text-lightGrey font-normal font-secondary text-sm mb-12'>
			{detailsText}
		</p>
	</div>
	{
		rightAlignedImg && (
			<div class='w-[370px]'>
				<Image
					src={imgMetadata}
					width={370}
					height={220}
					alt='green database'
					class='hidden lg:block'
				/>
			</div>
		)
	}
</section>
